<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientRegistration.ReligionActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="What religion do you identify with?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/islamBT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_corner_button"
        android:textColor="@color/white"
        android:text="Islam"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/judaismBt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Judaism"
        android:background="@drawable/round_corner_button"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/islamBT"
        app:layout_constraintStart_toStartOf="@+id/islamBT"
        app:layout_constraintTop_toBottomOf="@+id/islamBT" />

    <Button
        android:id="@+id/christianityBT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_corner_button"
        android:textColor="@color/white"
        android:text="Christianity"
        app:layout_constraintEnd_toEndOf="@+id/judaismBt"
        app:layout_constraintStart_toStartOf="@+id/judaismBt"
        app:layout_constraintTop_toBottomOf="@+id/judaismBt" />

    <Button
        android:id="@+id/hinduismBt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hinduism"
        android:background="@drawable/round_corner_button"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/christianityBT"
        app:layout_constraintStart_toStartOf="@+id/christianityBT"
        app:layout_constraintTop_toBottomOf="@+id/christianityBT" />

    <Button
        android:id="@+id/otherBtRelegion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_corner_button"
        android:textColor="@color/white"
        android:text="Other"
        app:layout_constraintEnd_toEndOf="@+id/hinduismBt"
        app:layout_constraintStart_toStartOf="@+id/hinduismBt"
        app:layout_constraintTop_toBottomOf="@+id/hinduismBt" />
</androidx.constraintlayout.widget.ConstraintLayout>